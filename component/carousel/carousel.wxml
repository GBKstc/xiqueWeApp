<view style='width:100%;position: relative;'>
  <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" 
      interval="{{interval}}"
      duration="{{duration}}"
      bindchange="intervalChange"
  >
      <block wx:for="{{imgUrls}}">
          <swiper-item>
              <image src="{{item}}" class="slideImage" />
          </swiper-item>
      </block>
  </swiper>
  <view class='numIcon'>
    {{imgIndex}}/{{imgUrls.length}}
  </view>
</view>
