@import "../../utils/commonConfirm.wxss";
.people{
  position: relative;
}
.img{
  position: absolute;
  right: 0;
  bottom:2px;
}
.img image{
  border-radius: 50%;
} 

.itemClickTpl{
  box-sizing: border-box;
  width:300px;
  margin:0 auto;
  height:110px;
  /* border-bottom: 1px solid #eee; */
}
.centerTpl{
  position:relative;
  top:50%;
  transform:translateY(-50%);
}
.nameTpl{
  position:relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name1Tpl{
  font-size:20px;
  color:#fd9595;
}
.name2Tpl{
  font-size:20px;
  color:#000000;
  vertical-align: middle;
  letter-spacing: -0.48px;
}
.rightBox{
  display: flex;
  justify-content: end;
  align-items: center;
}
.infoText{
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
}
.craftManBack{
  /* float:right; */
  vertical-align: middle;
  width:9px;
  height:16px;
  margin-left: 8px;
}
.storeTpl{
  font-size:14px;
  color:#b1b1b1;
  border-right:1px solid #eee;
  padding-right:5px;
}
.distanceTpl{
  font-size:14px;
  color:#b1b1b1;
  /* border-right:1px solid #eee; */
  padding-left:5px;
}
.centerImg{
  position: absolute;
  width:70px;
  height:70px;
  bottom:-25px;
  left:0;
}
.centerImg image{
  border-radius: 50%;
  width:70px;
  height:70px;
  border:1px solid #e8e8e8;
  background-color:#eee;
  object-fit: cover;
}
 .marLeft{
  margin-left: 90px;
}


