<view class='allBox'>
  <view class='header baseBox'>
    <Carousel prop-coverImgUrl="{{detail.coverImgUrl}}"></Carousel>
    <view class="headerContent">
      <text class='headerContentText'>{{detail.eventName}}</text>
      <view class='infoContent'>
        <image wx:if="{{detail.remind}}" class='near' src='../../image/att.png'></image>
        <text wx:if="{{detail.remind}}">{{detail.remind}}</text>
      </view>
    </view>
  </view>

  <view class='topBorder baseBox'>
    <view class='detailsContent'>
      <view class='contentHeader'>
        <text class='goodsName'>商品介绍</text>
        <image src='../../image/zs.png'></image>
      </view>
      <view class='banner'>
        <view class='bannerList'>
          <view class='itemName'>
            <text>谷物黄金素(悦享版)</text>
            <text class='remark'>-指定产品</text>
          </view>
          <text class='itemPrice'>500</text>
        </view>
        <view class='bannerList'>
          <view class='itemName'>
            <text>谷物黄金素(悦享版)</text>
          </view>
          <text class='itemPrice'>*1</text>
        </view>
      </view>
      <view class='footerInfo'>
          <image src='../../image/att.png'></image>
          <view>购买后使用时间{{detail.validityDays}}天</view>
        </view>
    </view>
  </view>

  <view class='topBorder baseBox'>
    <view class='detailsContent'>
      <view class='contentHeader'>
        <text class='goodsName'>商品详情</text>
        <image src='../../image/zs.png'></image>
      </view>
      <view class='detailsText'>{{detail.goodsDetail}}</view>
      <view class='imgList'>
        <image src='{{detail.coverImgUrl}}'></image>
      </view>
    </view>
  </view>

  <view class='baseBox'>
    <view class='storeLsitHeader'>
      <view class='listHeaderBox'>
        <view class='box1'>
          <text>适用门店  （共{{detail.usableStoreList.length}}店）</text>
          <image src='../../image/zs.png'></image>
        </view>
        <view class='box2'>
          <image class='craftManBack' src='../../image/right.png'></image>
        </view>
      </view>
    </view>
    <view>
      <view class='storeList' wx:for="{{detail.usableStoreList}}" wx:key="{{item.id}}">
        <view class='storeName'>
          <view>{{item.name}}</view>
          <view>{{item.distance}}</view>
        </view>
        <view class='storeAdress'>
          <view class="storeAdressText">{{item.address}}</view>
          <view><image src='../../image/go.png'></image></view>
        </view>
      </view>
    </view>
    
    <!--列表元素位置  -->
  </view>

  <view class='footer'>
    <view class='footerBox'>
      <view class='price'>
        <text class='priceNew'>￥{{detail.currentPrice}}</text>
        <text class='priceOld'>{{detail.originPrice}}</text>
      </view>
      <button bindlongpress="longTap" bindtap='aclick'>限时抢购</button>
    </view>
  </view>
</view>

<!-- 消息弹窗 -->
<view class='loadingMask' wx:if="{{cardRankInfo}}">
  <view class='loadingContent2' >
    <view class='title'>提示</view>
    <view class='loadingContent22'>{{cardRankInfo}}</view>
    <view class='buttonArr'>知道了</view>
  </view>
</view>

<!-- 消息弹窗 -->
<view class='loadingMask modal' wx:if="{{timesInfo}}">
  <view class='loadingContent2' >
    <view class='title'>提示</view>
    <view class='loadingContent22'>您的购买次数已达上限</view>
    <view class='buttonArr'>知道了</view>
  </view>
</view>

