.storeLsitHeader .listHeaderBox{
  width: 700rpx;
  display: -webkit-box;
  -webkit-box-align: center;
  -webkit-box-pack:justify;
  padding-bottom: 50rpx; 
  padding-top: 50rpx;
  margin: 0 auto;
}
.listHeaderBox .box1{
  display: block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: rgb(255, 152, 0);
}
.listHeaderBox .box2{
  display: -webkit-box;
  -webkit-box-align: center;
  line-height: 28rpx;
}
.box2 text{
  display: block;
  font-size: 28rpx;
  line-height: 28rpx;
  color: rgb(207, 207, 207);
}
.box2 image{
  display: block;
  width: 28rpx;
  height: 28rpx;
}

.footer{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: rgb(255, 255, 255);
  box-shadow:0 0 20rpx 1rpx rgb(204, 204, 204);
}
.footer .footerBox{
  display: -webkit-box;
  -webkit-box-align: center;
  height: 100%;
  width: 700rpx;
  margin: 0 auto;
}
.footerBox .price{
  display: -webkit-box;
  -webkit-box-align: end;
}
.price .priceNew{
  display: block;
  font-size: 56rpx;
  line-height: 56rpx;
  color: rgb(255, 152, 0);
}
.price .priceOld{
  display: block;
  font-size: 24rpx;
  line-height: 24rpx;
  color: rgb(204, 204, 204);
  padding-left: 25rpx;
  text-decoration: line-through
}