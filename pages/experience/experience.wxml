<view style='position: relative'>
  <view class='isLogin' wx:if="{{loading}}">
    
  </view>
  <view class='isLogin' wx:elif="{{listData.length}}">
    <view class='lazyBox' wx:for="{{listData}}" data-id='{{item.id}}' wx:key="{{item.id}}" bindtap='showDetails'>
        <view class='imgBox'>
          <image class='lazyImg' mode="aspectFill" src="{{item.coverImgUrl}}"></image>
        </view>
        <view class='imgContext'>
          <text class='imgTitle'>{{item.eventName}}</text>
          <view class='imgPrice'>
            <text class='priceNow'>￥{{item.currentPrice}}</text>
            <text class='priceOld'>{{item.originPrice}}</text>
          </view>
        </view>
      </view>
  </view>
  <view class='isNo'  style='display:black' wx:else>
    <view class='imgBox'>
      <image class='kongImg'  src='../../image/kongpaiban.png'></image>
      <text>暂无优惠信息</text>
    </view>
  </view>
</view>
