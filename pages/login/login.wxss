.inputContain{
  /* padding:0 84rpx; */
  width:580rpx;
  margin:0 auto;
  margin-bottom: 70rpx;
}
.inputContain1{
  /* padding:0 84rpx; */
  width:580rpx;
  margin:0 auto;
}
.lableName{
  display: inline-block;
  color:#666;
  font-size:36rpx;
  width:140rpx;
  vertical-align: middle;
  letter-spacing:0;
}
.nameEntry{
  box-sizing: border-box;
  width:440rpx;
  padding-left:20rpx;
  border-bottom:1px solid #eee;
  display: inline-block;
  vertical-align: middle;
  letter-spacing:0;
}
.phcolor{
  color:#b1b1b1;
  font-size:28rpx;
}
.submit{
  width:690rpx;
  height:94rpx;
  line-height:94rpx;
  background-color: #fd9595;
  text-align: center;
  font-size:36rpx;
  color:#fff;
  letter-spacing:0;
}
.send{
  position: absolute;
  bottom:10rpx;
  right:0;
  z-index: 10000;
  width:160rpx;
  height:80rpx;
   padding-left:0!important; 
   padding-right:0!important; 
  line-height: 80rpx;
  color:#fff;
  font-size:28rpx;
  background-color: #fd9595;
  letter-spacing:0;
}
button[disabled]{
  color:#fff!important;
  background-color: #fd9595!important;
  opacity:0.6; 
  letter-spacing:0;
}

.voiceCode{
  margin-bottom: 210rpx;
  text-align: right;
  font-size: 28rpx;
  color: #fd9595;
  width: 580rpx;
  margin: 40rpx auto;
}
.voiceCodeText{
  height: 28rpx;
  line-height: 28rpx;
  letter-spacing:0;
}


.wxLoginBox{
  width: 100%;
  background-color: white;
  letter-spacing:0;
}
.wxLoginBox .wxLoginHeader{
  margin: 100rpx 0 160rpx 0;
}
.wxLoginHeader .line{
  width: 76rpx;
  height: 4rpx;
  background-color: #DCDCDC;
}
.wxLoginHeader .text{
  padding: 0 100rpx;
  color: #333333;
  letter-spacing:0;
  font-weight: bold;
  line-height: 60rpx;
  text-align: center;
}
.logoBox{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  background-color: #FD9595;
  margin: 0 auto 50rpx;
  letter-spacing:0;
}
.logoBox image{
  display: block;
  width: 90rpx;
  height: 90rpx;
}
.loginButton{
  width: 670rpx;
  height: 94rpx;
  background:  #FD9595;
  /* border: 2rpx solid rgba(5,5,5,0.08); */
  border-radius: 10rpx;
  letter-spacing:0;

  color: white;
}
.footerBox{
  width: 100%;
  position: fixed;
  bottom: 80rpx;
  left: 0;
  text-align: center;
  color: #FD9595;
  letter-spacing:0;
}
