
<view>
  <view class='tabTop'>
    <text data-status='1' class="changeBlock {{status=='1'?'swiperCellActive':''}}" bindtap='timeSelected'>待服务</text>
    <text data-status='2' class="changeBlock {{status=='2'?'swiperCellActive':''}}" bindtap='timeSelected'>服务完成</text>
    <text data-status='3' class="changeBlock {{status=='3'?'swiperCellActive':''}}" bindtap='timeSelected'>服务取消</text>
  </view>
  <view class='list'>
     <!-- <block wx:for="{{listData}}">  -->
     <!-- <template is='{{_num}}'></template> -->
    <view class='listItem' wx:for="{{listData}}" wx:key="{{item.id}}" data-id="{{item.id}}" data-status="{{status}}" data-evaluategiftid="{{item.evaluateGiftId}}" bindtap='oneClick'>
      <view class='up'>
        <text class='date'>{{item.timePart}}</text><text class='time'>({{item.timeDuan}}小时)</text>
      </view>
      <view class='down'>
        {{item.departmentName}}
      </view>
      <view class='down' style='margin-top:10rpx'>
        <text class='time'>{{item.date}}</text>
        <text class='week'>({{item.week}})</text><text class='evaluate' wx:if="{{item.isEvaluate==='n'&&item.isOther===0?true:false}}">去评价</text>
      </view>
    </view> 
     <!-- </block>  -->
  </view>
</view>
<!--mask-->  
<include src="../../utils/commonConfirm.wxml"/> 

