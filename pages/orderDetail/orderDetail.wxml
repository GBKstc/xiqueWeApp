    <view class='submitButton fontSize16' disabled="{{!img1||!img2||!img3||!img4||!img5||bg1||bg2||bg3||bg4||bg5?false:true}}" bindtap='openModal' >消费确认</view>
  </view>
  <view class='submit' wx:elif="{{status==0&&recordData.serviceType==1}}">
