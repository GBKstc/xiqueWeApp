/* pages/personDetail/personDetail.wxss */
@import "../../utils/commonWxss/common.wxss";
.box{
  width: 670rpx;
  padding: 0 40rpx;
  margin: 0 auto;
}
.item{
  padding: 18rpx 0;
  min-height: 94rpx;
  border-bottom: 2rpx solid #F4F4F4;
}
.text{
  color: #666666;
}
.personHeadData{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
}
.operationLineRight{
  display: flex;
  justify-content: end;
  align-content: center;
}
.operationLineRight .lineRightText{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: -0.68rpx;
  text-align: center;
  line-height: 32rpx;
  margin-right: 16rpx;
}
.operationLineRight .lineRightLogo{
  width: 18rpx;
  height: 32rpx;
}
.lineRightLogo image{
  display: flex;
  width: 18rpx;
  height: 32rpx;
}



/*取消预约*/  
.cancel_toast_mask {  
  /* background-color: transparent;  */
  background: rgba(0, 0, 0, 0.5); 
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.cancel_toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.cancel_toast_content {  
  width: 55%;  
  padding: 20rpx;    
  
}  
.cancel_toast_content-text{
  background-color: #fff; 
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom:1px solid #d2d3d5;
}
.cancel_toast_content_text1 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:50rpx;
  padding-bottom:15rpx;
  color: #333;  
  font-size: 36rpx;  
  text-align: center; 
  font-weight: bold;
}
.cancel_toast_content_text2 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:15rpx;
  padding-bottom:30rpx;
  color: #999;  
  font-size: 30rpx;  
  text-align: center;  
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button{
  color:#333;
  font-size:28rpx;
  /* margin-top: 20rpx; */
  
  text-align: center;
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button1{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-right:1px solid #d2d3d5; 
  border-bottom-left-radius:20rpx;
  color:#333;
  font-size:36rpx;
  background-color: #fff;
}
.cancel_toast_content_button2{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-bottom-right-radius:20rpx;
  color:#fd9595;
  font-size:36rpx;
  background-color: #fff;
  /* border:1px solid #d2d3d5; */
}

.evaluationGift{
  float: right;
  margin-right: 21rpx;
  width:140rpx;
  height: 50rpx;
  line-height:48rpx;
  background:white;
  border-radius:6rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(253,149,149,1);
  text-align: center;
  border: 1rpx solid rgba(253,149,149,1);
}