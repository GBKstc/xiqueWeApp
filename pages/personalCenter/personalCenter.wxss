@import "../../utils/commonConfirm.wxss";
.box{
  background-color:white;
  overflow:hidden;
  position: fixed;
  left:0;
  top: 0;
  height: 100%;
  width: 100%; 
}
.headerBox{
  height: 384rpx;
  width: 750rpx;
  background-color: #FD9595;
}
.headerBox .headerPerson{
  width: 622rpx;
  margin: 0 auto;
  padding-top: 42rpx;
  display: flex;
  justify-content: start;
  align-items: flex-end;
}
.headerPerson .personHead{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  padding: 10rpx;
  background-color: #FEAFAF;
}
.personHeadData{
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
}
.personName{
  position: relative;
  left: 30rpx;
  bottom: 20rpx;
  height: 80rpx;
}
.personNameText{
  display: flex;
  justify-content: start;
  align-items: center;

  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: -0.96rpx;
  text-align: center;
  line-height: 40rpx;
}
.craftManBack{
  /* float:right; */
  vertical-align: middle;
  width: 12rpx;
  height: 22rpx;
  margin-left: 24rpx;
}
.personTime{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: -0.58rpx;
  text-align: center;
  line-height: 24rpx;
  padding-top: 16rpx;
}

/* 头部符文内容 */
.serviceContent{
  width: 568rpx;
  height: 140rpx;
  background: #FFFFFF;
  box-shadow: 4rpx 4rpx 4rpx 0 rgba(236,236,236,0.50), -4rpx -4rpx 4rpx 0 rgba(236,236,236,0.50);
  border-radius: 8rpx;
  margin: 28rpx auto 0;

  display: flex;
  justify-content: space-between;
  align-content: center;

  padding: 58rpx 54rpx 0 54rpx;
}

.serviceContent .contentBox{
  width: 110rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}
.contentBox .contentLogo{
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.contentLogo image{
  display: block;
  width: 48rpx;
  height: 48rpx;
  object-fit: contain;
}
.contentLogo .hint{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  background: #FD9595;
  letter-spacing: 0;
  text-align: center;
  line-height: 28rpx;
  padding: 4rpx 8rpx;
  border-radius: 28rpx 28rpx 28rpx 0;
  position: absolute;
  left: 58rpx;
  top: -28rpx;
  height: 28rpx;
  width: 130rpx;
}
.contentBox .contentTitle{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: -0.68rpx;
  text-align: center;
  line-height: 28rpx;
}

/* 中间引导部分 */
.operation{
  width: 670rpx;
  padding: 28rpx 40rpx 0 40rpx;
  background-color: white;
}
.operation .operationLine{
  width: 100%;
  height: 120rpx;
  border-bottom: 2rpx solid #F4F4F4;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.operationLine .operationLineLeft{
  display: flex;
  justify-content: start;
  align-content: center;
  position: relative;
  left: -16rpx;
}
.operationLineLeft .lineLeftLogo{
  width: 46rpx;
  height: 40rpx;
  margin-right: 18rpx;
}
.lineLeftLogo image{
  display: flex;
  width: 46rpx;
  height: 40rpx;
}
.operationLineLeft .lineLeftText{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #666666;
  letter-spacing: -0.68rpx;
  text-align: center;
  line-height: 40rpx;
}
.operationLine .operationLineRight{
  display: flex;
  justify-content: end;
  align-content: center;
}
.operationLineRight .lineRightText{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FD9595;
  letter-spacing: -0.68rpx;
  text-align: center;
  line-height: 32rpx;
  margin-right: 16rpx;
}
.operationLineRight .lineRightLogo{
  width: 18rpx;
  height: 32rpx;
}
.lineRightLogo image{
  display: flex;
  width: 18rpx;
  height: 32rpx;
}


/* 底部 */
.footBox{
  position: fixed;
  bottom: 32rpx;
  text-align: center;
  width: 100%;
}
.footBox .companyName{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FD9595;
  letter-spacing: -0.58rpx;
  text-align: center;
  line-height: 24rpx;
}
.footBox .footContent{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: -0.58rpx;
  text-align: center;
  line-height: 24rpx;
}







/*取消预约*/  
.cancel_toast_mask {  
  /* background-color: transparent;  */
  background: rgba(0, 0, 0, 0.5); 
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.cancel_toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.cancel_toast_content {  
  width: 55%;  
  padding: 20rpx;    
  
}  
.cancel_toast_content-text{
  background-color: #fff; 
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom:1px solid #d2d3d5;
}
.cancel_toast_content_text1 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:50rpx;
  padding-bottom:15rpx;
  color: #333;  
  font-size: 36rpx;  
  text-align: center; 
  font-weight: bold;
}
.cancel_toast_content_text2 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:15rpx;
  padding-bottom:30rpx;
  color: #999;  
  font-size: 30rpx;  
  text-align: center;  
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button{
  color:#333;
  font-size:28rpx;
  /* margin-top: 20rpx; */
  
  text-align: center;
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button1{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-right:1px solid #d2d3d5; 
  border-bottom-left-radius:20rpx;
  color:#333;
  font-size:36rpx;
  background-color: #fff;
}
.cancel_toast_content_button2{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-bottom-right-radius:20rpx;
  color:#fd9595;
  font-size:36rpx;
  background-color: #fff;
  /* border:1px solid #d2d3d5; */
}

