/*取消预约*/  
.cancel_toast_mask {  
  /* background-color: transparent;  */
  background: rgba(0, 0, 0, 0.5); 
  width: 100%;  
  height: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 888;  
}  
/*toast*/  
.cancel_toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.cancel_toast_content {  
  width: 55%;  
  padding: 20rpx;    
  
}  
.cancel_toast_content-text{
  background-color: #fff; 
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom:1px solid #d2d3d5;
}
.cancel_toast_content_text1 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:50rpx;
  padding-bottom:15rpx;
  color: #333;  
  font-size: 36rpx;  
  text-align: center; 
  font-weight: bold;
}
.cancel_toast_content_text2 {  
  /* height: 100%;   */
  width: 100%;  
  padding-top:15rpx;
  padding-bottom:30rpx;
  color: #999;  
  font-size: 30rpx;  
  text-align: center;  
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button{
  color:#333;
  font-size:28rpx;
  /* margin-top: 20rpx; */
  
  text-align: center;
  /* border-bottom:1px solid #d2d3d5; */
}
.cancel_toast_content_button1{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-right:1px solid #d2d3d5; 
  border-bottom-left-radius:20rpx;
  color:#333;
  font-size:36rpx;
  background-color: #fff;
}
.cancel_toast_content_button2{
  box-sizing: border-box;
  display:inline-block;
  width:50%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  border-bottom-right-radius:20rpx;
  color:#fd9595;
