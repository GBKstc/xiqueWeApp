<view class='select' wx:if="{{loading}}">
  
</view>

<view class='box' wx:elif="{{list.length}}">
  <view class='header'>
    <view class='{{selectListLeft?"headerNoSelect":"headerSelect"}}' data-type="noUse" bindtap="changeSelect">未使用</view>
    <view class='{{selectListLeft?"headerSelect":"headerNoSelect"}}' data-type="Disabled" bindtap="changeSelect">已失效</view>
    <view class='bottomLine' style='left: {{bottomLineLeft}}rpx'></view>
  </view>
  <view class='selectList' >
    <view class='selectListBox' style='left:{{selectListLeft}}rpx;' >
      <view class='select' >
        <view class='select_row' bindtap='chancenouse' data-index='{{index}}'  wx:for="{{list}}" wx:key="{{item.discountCodeId}}">
          <view class='select_absolute {{item.discountCodeStatusName=="未使用"?"select_absoluteYes":"select_absoluteNo"}} '>{{item.discountCodeStatusName}}</view>
          <view>
            <image class='select_img' mode="aspectFill"  src='{{item.coverImgUrl}}'></image>
          </view>
          <view class='select_right'>
            <view class='select_right_top'>{{item.eventName}}</view>
            <view class='select_right_bottom'>有效期至: {{item.endTime}}</view>
          </view>
        </view>
        
      </view>

      <view class='select' wx:if="{{false}}">
        <view class='select_row' bindtap='chancenouse' data-index='{{index}}'  wx:for="{{list}}" wx:key="{{item.discountCodeId}}">
          <view class='select_absolute {{item.discountCodeStatusName=="未使用"?"select_absoluteYes":"select_absoluteNo"}} '>{{item.discountCodeStatusName}}</view>
          <view>
            <image class='select_img' mode="aspectFill"  src='{{item.coverImgUrl}}'></image>
          </view>
          <view class='select_right'>
            <view class='select_right_top'>{{item.eventName}}</view>
            <view class='select_right_bottom'>有效期至: {{item.endTime}}</view>
          </view>
        </view>
        
      </view>
      <view class='select' style='background:url("../../image/noDiscount.png") no-repeat;background-size: cover;' wx:else>
        <view class='noCardText'>您还没有会员卡</view>
      </view>
    </view>
    
  </view>
  <view></view>
</view>


