@import "../../utils/commonConfirm.wxss";
.contain{
  padding-top:212rpx;
   width:750rpx; 
  /* width:70vw; */
  margin:0 auto;
}
.item{
  padding-bottom:44rpx;
  margin-bottom:48rpx;
  border-bottom:1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .itemBox{
  width: 670rpx;
  margin: 0 auto;
}
.item .itemHeader{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.itemHeader .storeName{
  display: flex;
  justify-content: start;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #666666;
  letter-spacing: -0.86rpx;
  line-height: 36rpx;
  width: 50%;
}
.storeName .offenLogo{
  width: 64rpx;
  height: 36rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: -0.58rpx;
  text-align: center;
  line-height: 36rpx;
  background: #FD9595;
  border-radius: 4rpx;
  margin-left: 32rpx;
}
.itemHeader .share{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border:none;
  padding: 0;
}
.share image{
  width: 32rpx;
  height: 33rpx;
  display: flex;
}
.shareBox .shareText{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FD9595;
  letter-spacing: -0.68rpx;
  text-align: center;
  margin-left: 16rpx;
  line-height: 33rpx;
  width: 56rpx;
  border: none;
  padding:0;
}
.rightLogo{
  width:18rpx;
  height:32rpx;
}
.rightLogo image{
  display:block;
  width:18rpx;
  height:32rpx;
}
.address{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #979797;
  letter-spacing: -0.68rpx;
  line-height: 28rpx;
  margin: 32rpx 0 44rpx 0;
}
.buttonBox{
  display: flex;
  justify-content: start;
  align-items: center;
  
}
.buttonBox .button{
  /* width: 178rpx; */
  padding: 0 16rpx;
  height: 56rpx;
  border: 2rpx solid #FD9595;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button image{
  display: block;
  width: 32rpx;
  height: 32rpx;
}
.button .buttonText{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FD9595;
  letter-spacing: -0.68rpx;
  line-height: 28rpx;
  margin-left:6rpx; 
}

/* 搜索样式 */
.searchBox{
  width: 750rpx;
  height: 180rpx;
  background-color: #fff;
}
.search{
  position:relative;  
  width:640rpx;
  padding-top:60rpx;
  padding-bottom:40rpx;
  margin:0 auto;
  background-color: #fff;
}
/* 搜索输入框字体大小 */
.search input{
  box-sizing: border-box;
  width:100%;
  height:80rpx;
  border:1px solid #E1E1E1;
  /* border-radius: 20rpx; */
  padding-left: 20rpx;
  padding-right:80rpx;
  font-size: 36rpx;
  color:#B8B8B8;
  border-radius: 8rpx;
  letter-spacing: -0.86rpx;
}
.searchCraft{
  position: absolute;
  top:50%;
  transform: translateY(-25%);
  right:32rpx;
  width:48rpx;
  height:48rpx;
}
.phcolor{
  color:#b1b1b1;
  font-size: 32rpx;
}
.changeFixed{
  position:fixed;
  width: 750rpx;
   z-index: 10000; 
   background-color: white;
  /* top:0; */
   left:50%; 
   transform:translateX(-50%); 
}

.kongCon{
  margin-top:154rpx;
  text-align: center;
}
.kongImg{
  width:200rpx;
  height:200rpx;
}
.kong{
  color:#999;
  font-size: 32rpx;
  padding-top:70rpx;
}

